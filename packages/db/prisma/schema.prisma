generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
  profiles  Profile[]
}

model Profile {
  id        String   @id @default(cuid())
  userId    String
  rawInput  Json
  facts     Json
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model Order {
  id        String   @id @default(cuid())
  userId    String
  status    String
  amount    Int
  currency  String
  provider  String
  meta      Json
  createdAt DateTime @default(now())
}
